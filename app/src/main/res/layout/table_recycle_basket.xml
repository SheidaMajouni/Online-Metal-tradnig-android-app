<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:padding="5dp">

    <!--<ImageView-->
    <!--android:id="@+id/image_basket"-->
    <!--android:layout_width="70dp"-->
    <!--android:layout_height="70dp"-->
    <!--android:background="@color/colorPrimary"-->
    <!--android:padding="1dp"-->
    <!--android:src="@mipmap/foulad_mobarak2"-->
    <!--app:layout_constraintRight_toRightOf="parent" />-->

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/half_black"/>

    <TextView
        android:id="@+id/basket_row"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle_gray"
        android:gravity="center"
        android:text="1"
        android:paddingBottom="3dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/deliver_text_basket"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/deliver_text_basket" />

    <ImageView
        android:id="@+id/delete_basket"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_delete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/table_row_explain_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1234567"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@+id/basket_row"
        app:layout_constraintTop_toBottomOf="@+id/line1"/>

    <TextView
        android:id="@+id/deliver_text_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="13dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        app:layout_constraintRight_toLeftOf="@+id/basket_row"
        app:layout_constraintTop_toBottomOf="@+id/table_row_explain_basket" />

    <TextView
        android:id="@+id/table_row_price_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="13dp"
        android:layout_marginTop="7dp"
        app:layout_constraintRight_toLeftOf="@+id/deliver_text_basket"
        app:layout_constraintTop_toBottomOf="@id/table_row_explain_basket" />

    <TextView
        android:id="@+id/count_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/count"
        android:textColor="@color/textColor"
        android:textSize="14dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@+id/basket_row"
        app:layout_constraintBottom_toBottomOf="@+id/table_row_count_basket" />

    <EditText
        android:id="@+id/table_row_count_basket"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:hint="1"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14dp"
        app:layout_constraintRight_toLeftOf="@+id/count_basket"
        app:layout_constraintTop_toBottomOf="@+id/deliver_text_basket" />

    <TextView
        android:id="@+id/table_row_unit_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="14dp"
        app:layout_constraintRight_toLeftOf="@+id/table_row_count_basket"
        app:layout_constraintBottom_toBottomOf="@+id/table_row_count_basket" />

</android.support.constraint.ConstraintLayout>