<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:id="@+id/chat_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_image"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:paddingTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/name_chat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dfcsfsfsfsfvsfsdf"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/chat_image"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/black_semi_transparent"
        app:layout_constraintRight_toLeftOf="@+id/chat_image"/>

    <TextView
        android:id="@+id/content_chat_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="dfcsfsfsfshghghjhjhjkhjkbjhbjhbhbjbbjbjhbjhbjbjhbhbjhbjbfkkkkkvsfsdf"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/name_chat_text"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="12dp"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:ellipsize="start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/chat_image"/>

    <TextView
        android:id="@+id/chat_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7 feb"
        app:layout_constraintTop_toTopOf="@+id/name_chat_text"
        android:paddingStart="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_chat_text"/>

    <View
        android:id="@+id/divider"
        android:layout_height="1dp"
        android:layout_width="0dp"
        android:background="@color/half_black"
        app:layout_constraintTop_toBottomOf="@+id/chat_image"
        app:layout_constraintRight_toRightOf="@+id/name_chat_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>