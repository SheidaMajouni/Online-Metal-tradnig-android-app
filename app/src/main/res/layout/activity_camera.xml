<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CameraActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/custom_action_bar_camera_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/camera_activity_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="0.11">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="1"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="@string/order_by_image"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/camera_activity_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="0.89"
        app:layout_constraintTop_toBottomOf="@+id/custom_action_bar_camera_activity"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.Guideline
            android:id="@+id/center_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50"/>

        <ImageView
            android:id="@+id/camera_image_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/camera"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/center_guide"/>

        <ImageView
            android:id="@+id/gallery_image_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/galleryicon"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/center_guide"/>

        <ImageView
            android:id="@+id/uploaded_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border_corner"
            app:layout_constraintBottom_toTopOf="@+id/submit_button_photo"
            app:layout_constraintTop_toBottomOf="@+id/gallery_image_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/text_noImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_image"
            app:layout_constraintLeft_toLeftOf="@+id/uploaded_image"
            app:layout_constraintRight_toRightOf="@+id/uploaded_image"
            app:layout_constraintTop_toTopOf="@id/uploaded_image"
            app:layout_constraintBottom_toBottomOf="@+id/uploaded_image"/>

        <ProgressBar
            android:id="@+id/store_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/uploaded_image"
            app:layout_constraintRight_toRightOf="@+id/uploaded_image"
            app:layout_constraintTop_toTopOf="@id/uploaded_image"
            app:layout_constraintBottom_toBottomOf="@+id/uploaded_image"/>

        <Button
            android:id="@+id/submit_button_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/action_bar"
            android:textColor="@color/white"
            android:text="@string/send"/>
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>