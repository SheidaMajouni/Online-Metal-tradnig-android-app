<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/deliver_final_bill_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        android:paddingBottom="7dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="7dp"
        android:text="1234567"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="15dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="0.23"
        app:layout_constraintRight_toLeftOf="@+id/count_final_bill_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/explain_final_bill_text"
        app:layout_constraintBottom_toBottomOf="@+id/explain_final_bill_text"/>

    <TextView
        android:id="@+id/count_final_bill_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        android:paddingBottom="7dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="7dp"
        android:text="1234567"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="15dp"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintRight_toLeftOf="@+id/price_final_bill_text"
        app:layout_constraintBottom_toBottomOf="@id/explain_final_bill_text"
        app:layout_constraintTop_toTopOf="@+id/explain_final_bill_text"
        app:layout_constraintLeft_toRightOf="@+id/deliver_final_bill_text" />

    <TextView
        android:id="@+id/price_final_bill_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        android:paddingBottom="7dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="7dp"
        android:text="1234567"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="15dp"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintRight_toLeftOf="@+id/explain_final_bill_text"
        app:layout_constraintTop_toTopOf="@id/explain_final_bill_text"
        app:layout_constraintBottom_toBottomOf="@id/explain_final_bill_text"
        app:layout_constraintLeft_toRightOf="@+id/count_final_bill_text" />

    <TextView
        android:id="@+id/explain_final_bill_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:paddingBottom="7dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="7dp"
        android:text="1234567"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="15dp"
        app:layout_constraintHorizontal_weight="0.23"
        app:layout_constraintRight_toLeftOf="@+id/row_final_bill"
        app:layout_constraintLeft_toRightOf="@+id/price_final_bill_text" />

    <TextView
        android:id="@+id/row_final_bill"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        android:paddingBottom="7dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="7dp"
        android:text="1234567"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="15dp"
        app:layout_constraintHorizontal_weight="0.14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/explain_final_bill_text"
        app:layout_constraintBottom_toBottomOf="@id/explain_final_bill_text"
        app:layout_constraintLeft_toRightOf="@+id/explain_final_bill_text" />


</android.support.constraint.ConstraintLayout>