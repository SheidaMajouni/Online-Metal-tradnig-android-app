<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AboutUsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/tab_about_container"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <TextView
                android:id="@+id/more_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/for_more_info"
                android:textColor="@color/black"
                android:textSize="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tab_about_container" />

            <TextView
                android:id="@+id/line_sep"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/half_black"
                app:layout_constraintTop_toBottomOf="@+id/more_info" />

            <ImageView
                android:id="@+id/image_power"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:elevation="10dp"
                android:src="@drawable/power"
                app:layout_constraintBottom_toBottomOf="@+id/text_focus_detail"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_focus" />

            <TextView
                android:id="@+id/text_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:text="@string/focus"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_sep" />

            <TextView
                android:id="@+id/text_focus_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="@string/lorem_sec"
                android:textAlignment="viewStart"
                android:textColor="@color/icon"
                android:textSize="14dp"
                app:layout_constraintLeft_toRightOf="@+id/image_power"
                app:layout_constraintRight_toRightOf="@+id/text_focus"
                app:layout_constraintTop_toBottomOf="@+id/text_focus" />

            <ImageView
                android:id="@+id/image_star"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:elevation="10dp"
                android:src="@drawable/star"
                app:layout_constraintBottom_toBottomOf="@+id/text_star_detail"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_star" />

            <TextView
                android:id="@+id/text_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:text="@string/attention"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_focus_detail" />

            <TextView
                android:id="@+id/text_star_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="@string/lorem_sec"
                android:textAlignment="viewStart"
                android:textColor="@color/icon"
                android:textSize="14dp"
                app:layout_constraintLeft_toRightOf="@+id/image_power"
                app:layout_constraintRight_toRightOf="@+id/text_star"
                app:layout_constraintTop_toBottomOf="@+id/text_star" />

            <ImageView
                android:id="@+id/image_update"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:elevation="10dp"
                android:src="@drawable/update"
                app:layout_constraintBottom_toBottomOf="@+id/text_update_detail"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_update" />

            <TextView
                android:id="@+id/text_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:text="@string/be_update"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_star_detail" />

            <TextView
                android:id="@+id/text_update_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="@string/lorem_sec"
                android:textAlignment="viewStart"
                android:textColor="@color/icon"
                android:textSize="14dp"
                app:layout_constraintLeft_toRightOf="@+id/image_power"
                app:layout_constraintRight_toRightOf="@+id/text_update"
                app:layout_constraintTop_toBottomOf="@+id/text_update" />

            <TextView
                android:id="@+id/line_sep_two"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/half_black"
                app:layout_constraintTop_toBottomOf="@+id/text_update_detail" />

            <ImageView
                android:id="@+id/image_best"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@drawable/slide_one_two"
                app:layout_constraintTop_toBottomOf="@+id/line_sep_two"/>

            <TextView
                android:id="@+id/text_trust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trust"
                android:textSize="16dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_best"/>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/text_trust">

                <ViewFlipper
                    android:id="@+id/slideShow_about_first"
                    android:layout_width="match_parent"
                    android:layout_height="130dp">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/aa" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bb" />

                </ViewFlipper>
            </LinearLayout>

            <TextView
                android:id="@+id/line_sep_three"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/half_black"
                app:layout_constraintTop_toBottomOf="@+id/linear" />

            <TextView
                android:id="@+id/text_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment"
                android:textSize="16dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_sep_three"/>

            <LinearLayout
                android:id="@+id/linear_two"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/text_comment">

                <ViewFlipper
                    android:id="@+id/slideShow_about_two"
                    android:layout_width="match_parent"
                    android:layout_height="130dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image1_two"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="20dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:src="@drawable/a"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lorem_sec"
                            android:textColor="@color/icon"
                            android:layout_marginRight="20dp"
                            android:paddingLeft="20dp"
                            app:layout_constraintBottom_toBottomOf="@+id/image1_two"
                            app:layout_constraintRight_toLeftOf="@+id/image1_two"
                            app:layout_constraintTop_toTopOf="@+id/image1_two" />
                    </android.support.constraint.ConstraintLayout>
                    <!--android:src="@drawable/slide_two_one"-->

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image2_two"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="20dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:src="@drawable/b"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lorem_sec"
                            android:textColor="@color/icon"
                            android:layout_marginRight="20dp"
                            android:paddingLeft="20dp"
                            app:layout_constraintBottom_toBottomOf="@+id/image2_two"
                            app:layout_constraintRight_toLeftOf="@+id/image2_two"
                            app:layout_constraintTop_toTopOf="@+id/image2_two" />
                    </android.support.constraint.ConstraintLayout>

                </ViewFlipper>
            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/linear_two">

                <ImageView
                    android:id="@+id/image_chair"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/logo_dark"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <ImageView
                    android:id="@+id/image_google"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/google"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <ImageView
                    android:id="@+id/image_call"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/call"
                    app:layout_constraintLeft_toRightOf="@+id/image_google"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <ImageView
                    android:id="@+id/image_more"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/pointer"
                    app:layout_constraintLeft_toRightOf="@+id/image_call"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <ImageView
                    android:id="@+id/image_twitter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/twitter"
                    app:layout_constraintRight_toLeftOf="@+id/image_google"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <ImageView
                    android:id="@+id/image_facebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/facebook"
                    app:layout_constraintRight_toLeftOf="@+id/image_twitter"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <TextView
                    android:id="@+id/chair_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/all_chair_right"
                    android:textSize="13dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_google" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>