<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/final_bil_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/final_bill"
                android:textColor="@color/black"
                android:textSize="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/invoice_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:padding="5dp"
                android:background="@drawable/border_corner"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/final_bil_text">

                <TextView
                    android:id="@+id/id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:text="@string/your_id_text"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/id_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:text="134239472"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/light_red"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/id_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/half_black"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/id_number"/>

                <TextView
                    android:id="@+id/order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="7dp"
                    android:text="@string/register_date"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="@id/id_text"
                    app:layout_constraintTop_toBottomOf="@id/id_text" />

                <TextView
                    android:id="@+id/order_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="7dp"
                    android:text="2012/5/14"
                    android:textColor="@color/light_red"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toLeftOf="@id/id_number"
                    app:layout_constraintTop_toBottomOf="@id/id_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/half_black"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/order_date_text"/>

                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="7dp"
                    android:text="@string/customer_name"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="@id/id_text"
                    app:layout_constraintTop_toBottomOf="@id/order_date_text" />

                <TextView
                    android:id="@+id/customer_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="7dp"
                    android:text="sheida majooni"
                    android:textColor="@color/light_red"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toLeftOf="@id/id_number"
                    app:layout_constraintTop_toBottomOf="@id/order_date_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/half_black"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/customer_name_text"/>

                <TextView
                    android:id="@+id/order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="7dp"
                    android:text="@string/order_status"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="@id/id_text"
                    app:layout_constraintTop_toBottomOf="@id/customer_name" />

                <TextView
                    android:id="@+id/order_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="7dp"
                    android:text="delivered"
                    android:textColor="@color/light_red"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toLeftOf="@id/id_number"
                    app:layout_constraintTop_toBottomOf="@id/customer_name" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/half_black"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/order_status_text"/>

                <TextView
                    android:id="@+id/bill_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="7dp"
                    android:text="@string/bill_price"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="@id/id_text"
                    app:layout_constraintTop_toBottomOf="@id/order_status" />

                <TextView
                    android:id="@+id/bill_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="7dp"
                    android:text="53000"
                    android:textColor="@color/light_red"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toLeftOf="@id/id_number"
                    app:layout_constraintTop_toBottomOf="@id/order_status_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/half_black"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/bill_price_text"/>

                <TextView
                    android:id="@+id/tolerance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="7dp"
                    android:text="@string/tolerance"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="@id/id_text"
                    app:layout_constraintTop_toBottomOf="@id/bill_price" />

                <TextView
                    android:id="@+id/tolerance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="7dp"
                    android:text="3-5 %"
                    android:textColor="@color/light_red"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toLeftOf="@id/id_number"
                    app:layout_constraintTop_toBottomOf="@id/bill_price_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/half_black"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tolerance_text"/>

                <TextView
                    android:id="@+id/final_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="7dp"
                    android:text="@string/final_cost"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="@id/id_text"
                    app:layout_constraintTop_toBottomOf="@id/tolerance" />

                <TextView
                    android:id="@+id/final_cost_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="7dp"
                    android:text="56500"
                    android:textColor="@color/light_red"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toLeftOf="@id/id_number"
                    app:layout_constraintTop_toBottomOf="@id/tolerance_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/half_black"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/final_cost_text"/>

                <TextView
                    android:id="@+id/text_pick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:text="@string/how_to_pay"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="30dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/final_cost" />

                <RadioGroup
                    android:id="@+id/radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/final_cost_text">

                    <RadioButton
                        android:id="@+id/radio_doorway"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doorway"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/radio_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/credit" />

                </RadioGroup>

            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sign_up"
                android:text="@string/pay"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:elevation="10dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/invoice_holder" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/pay">

                <ImageView
                    android:id="@+id/image_chair"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/logo_dark"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <ImageView
                    android:id="@+id/image_google"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/google"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <ImageView
                    android:id="@+id/image_call"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/call"
                    app:layout_constraintLeft_toRightOf="@+id/image_google"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <ImageView
                    android:id="@+id/image_more"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/pointer"
                    app:layout_constraintLeft_toRightOf="@+id/image_call"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <ImageView
                    android:id="@+id/image_twitter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/twitter"
                    app:layout_constraintRight_toLeftOf="@+id/image_google"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <ImageView
                    android:id="@+id/image_facebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/facebook"
                    app:layout_constraintRight_toLeftOf="@+id/image_twitter"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <TextView
                    android:id="@+id/chair_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/all_chair_right"
                    android:textSize="13dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_google" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>