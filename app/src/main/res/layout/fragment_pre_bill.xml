<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:paddingTop="20dp"
    android:id="@+id/constrain_pre">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pre_bil_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/pre_bill"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/producer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="201900"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toLeftOf="@+id/pre_bil_text"
                app:layout_constraintTop_toTopOf="@+id/pre_bil_text" />

            <TextView
                android:id="@+id/producer_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:padding="7dp"
                android:text=""
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/pre_bil_text" />

            <TextView
                android:id="@+id/customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="@string/customer_info"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/producer" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/customer_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/customer"
                app:layout_constraintTop_toBottomOf="@id/producer">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/customer_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pre_bill_in_the_name_of"
                    android:padding="7dp"
                    android:textColor="@color/textColor"
                    android:textSize="15dp"
                    tools:ignore="MissingPrefix" />
            </android.support.design.widget.TextInputLayout>

            <ProgressBar
                android:id="@+id/store_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/topic_row_registered"
                app:layout_constraintTop_toBottomOf="@+id/customer_info"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_orange_refresh"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/topic_row_registered"
                app:layout_constraintTop_toBottomOf="@+id/customer_info"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/topic_row_registered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/action_bar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/store_progress">

                <TextView
                    android:id="@+id/deliver_pre_bill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/delivery_place"
                    android:textAlignment="center"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintHorizontal_weight="0.16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/total_price_pre_bill" />

                <TextView
                    android:id="@+id/total_price_pre_bill"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/total_price"
                    android:textAlignment="center"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/deliver_pre_bill"
                    app:layout_constraintHorizontal_weight="0.19"
                    app:layout_constraintLeft_toRightOf="@+id/deliver_pre_bill"
                    app:layout_constraintRight_toLeftOf="@+id/price_pre_bill"
                    app:layout_constraintTop_toTopOf="@id/deliver_pre_bill" />

                <TextView
                    android:id="@+id/unit_pre_bill"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/unit"
                    android:textAlignment="center"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/total_price_pre_bill"
                    app:layout_constraintHorizontal_weight="0.2"
                    app:layout_constraintLeft_toRightOf="@+id/price_pre_bill"
                    app:layout_constraintRight_toLeftOf="@+id/count_pre_bill"
                    app:layout_constraintTop_toTopOf="@id/total_price_pre_bill" />

                <TextView
                    android:id="@+id/count_pre_bill"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/count"
                    android:textAlignment="center"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/unit_pre_bill"
                    app:layout_constraintHorizontal_weight="0.2"
                    app:layout_constraintLeft_toRightOf="@+id/unit_pre_bill"
                    app:layout_constraintRight_toLeftOf="@+id/explain_pre_bill"
                    app:layout_constraintTop_toTopOf="@id/unit_pre_bill" />


                <TextView
                    android:id="@+id/price_pre_bill"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/price"
                    android:textAlignment="center"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/count_pre_bill"
                    app:layout_constraintHorizontal_weight="0.16"
                    app:layout_constraintLeft_toRightOf="@+id/total_price_pre_bill"
                    app:layout_constraintRight_toLeftOf="@+id/unit_pre_bill"
                    app:layout_constraintTop_toTopOf="@id/count_pre_bill" />

                <TextView
                    android:id="@+id/explain_pre_bill"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/explain"
                    android:textAlignment="center"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/price_pre_bill"
                    app:layout_constraintHorizontal_weight="0.16"
                    app:layout_constraintLeft_toRightOf="@+id/count_pre_bill"
                    app:layout_constraintRight_toLeftOf="@+id/row_registered"
                    app:layout_constraintTop_toTopOf="@id/price_pre_bill" />

                <TextView
                    android:id="@+id/row_registered"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/row"
                    android:textAlignment="center"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/explain_pre_bill"
                    app:layout_constraintHorizontal_weight="0.09"
                    app:layout_constraintLeft_toRightOf="@+id/explain_pre_bill"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/explain_pre_bill" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/topic_row_registered"
                android:background="@color/half_black"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/pre_bill_recycle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginBottom="5dp"
                app:layout_constraintLeft_toLeftOf="@id/topic_row_registered"
                app:layout_constraintRight_toRightOf="@+id/topic_row_registered"
                app:layout_constraintTop_toBottomOf="@id/topic_row_registered" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/aaa"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:background="@drawable/border"
                app:layout_constraintTop_toBottomOf="@+id/pre_bill_recycle"
                app:layout_constraintLeft_toLeftOf="@+id/topic_row_registered">

                <TextView
                    android:id="@+id/pre_bill_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:paddingStart="20dp"
                    android:text=""
                    android:textSize="13dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tax"
                    app:layout_constraintRight_toLeftOf="@id/total_text" />

                <TextView
                    android:id="@+id/pre_bill_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="20dp"
                    android:text="@string/sum"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toRightOf="@+id/pre_bill_price_text"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tax" />

                <TextView
                    android:id="@+id/tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:paddingStart="20dp"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/icon"
                    android:textSize="13dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/total_price"
                    app:layout_constraintRight_toLeftOf="@id/total_text" />

                <TextView
                    android:id="@+id/tax_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="20dp"
                    android:text="@string/tax"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tax"
                    app:layout_constraintBottom_toTopOf="@+id/total_price" />

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="10dp"
                    android:paddingStart="20dp"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/icon"
                    android:textSize="13dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/total_text" />

                <TextView
                    android:id="@+id/total_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:text="@string/total_price"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/total_price"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/text_aaa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="@string/compute_tax"
                android:textColor="@color/icon"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/aaa"
                app:layout_constraintRight_toRightOf="@+id/topic_row_registered"
                app:layout_constraintLeft_toLeftOf="@+id/topic_row_registered"/>

            <TextView
                android:id="@+id/text_bbb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="@string/ways_of_pay"
                android:textColor="@color/icon"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/text_aaa"
                app:layout_constraintRight_toRightOf="@+id/topic_row_registered"
                app:layout_constraintLeft_toLeftOf="@+id/topic_row_registered"/>

            <Button
                android:id="@+id/cancle_button"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/cancel_btn"
                android:text="@string/cancel"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/text_bbb"
                app:layout_constraintLeft_toLeftOf="parent" />

            <Button
                android:id="@+id/edit_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/cancle_button"
                android:background="@drawable/edit_btn"
                android:text="@string/edit"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@+id/cancle_button"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_submit"
                android:text="@string/confirm"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/text_bbb"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="@id/topic_row_registered"
                app:layout_constraintRight_toRightOf="@id/topic_row_registered"
                app:layout_constraintTop_toBottomOf="@+id/confirm_button"
                android:background="@color/half_black"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/confirm_button">

                <ImageView
                    android:id="@+id/image_chair"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/logo_dark"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <ImageView
                    android:id="@+id/image_google"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/google"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <ImageView
                    android:id="@+id/image_call"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/call"
                    app:layout_constraintLeft_toRightOf="@+id/image_google"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <ImageView
                    android:id="@+id/image_more"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/pointer"
                    app:layout_constraintLeft_toRightOf="@+id/image_call"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <ImageView
                    android:id="@+id/image_twitter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/twitter"
                    app:layout_constraintRight_toLeftOf="@+id/image_google"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <ImageView
                    android:id="@+id/image_facebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/facebook"
                    app:layout_constraintRight_toLeftOf="@+id/image_twitter"
                    app:layout_constraintTop_toBottomOf="@+id/image_chair" />

                <TextView
                    android:id="@+id/chair_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/all_chair_right"
                    android:textSize="13dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_google" />

            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>