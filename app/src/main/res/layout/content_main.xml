<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:id="@+id/main_layout"
    android:background="@color/white"
    tools:showIn="@layout/activity_main">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/custom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/action_bar"
        app:layout_constraintBottom_toTopOf="@+id/container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="0.11">


        <ImageView
            android:id="@+id/image_cart"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_bag"
            android:background="@drawable/circle_orange"
            android:padding="5dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_camera"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_cart_plus"
            android:padding="5dp"
            android:elevation="10dp"
            android:background="@drawable/circle_orange"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@id/image_cart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/notification_count_text"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:text="10"
            android:visibility="visible"
            android:textSize="14dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/green"
            app:layout_constraintBottom_toTopOf="@+id/image_cart"
            app:layout_constraintRight_toRightOf="@+id/image_cart"/>

        <TextView
            android:id="@+id/text_title_action_bar"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/chair_ironwork"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image_camera"
            app:layout_constraintRight_toLeftOf="@+id/logo_white"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/logo_white"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/logo_light"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/image_nav_drawer"
            app:layout_constraintLeft_toRightOf="@+id/text_title_action_bar"/>

        <ImageView
            android:id="@+id/image_nav_drawer"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:elevation="10dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/circle_yellow"
            android:src="@mipmap/ic_nav_drawer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@+id/navigationView"
        app:layout_constraintTop_toBottomOf="@+id/custom_action_bar"
        app:layout_constraintVertical_weight="0.80" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/sign_up"
        app:itemIconTint="@drawable/navigation_color"
        app:itemTextColor="@drawable/navigation_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintVertical_weight="0.09"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>