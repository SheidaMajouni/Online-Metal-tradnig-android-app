<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".activities.SignUpActivity">

    <ProgressBar
        android:id="@+id/sign_up_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/sign_up_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:background="@drawable/login_back"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/img_login_one"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/login_img"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/login_two"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="@id/img_login_one"
                app:layout_constraintTop_toTopOf="@id/img_login_one"
                app:layout_constraintBottom_toBottomOf="@+id/logo_text"/>

            <TextView
                android:id="@+id/logo_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:paddingStart="15dp"
                android:textAlignment="textStart"
                app:layout_constraintTop_toBottomOf="@id/img_login_one" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fill_boxes_to_login"
                android:textColor="@color/textColor"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/logo_text" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/phone_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="45dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logo_text">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/phone_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_phone"
                    android:hint="@string/phone"
                    android:inputType="phone"
                    android:textAlignment="viewStart"
                    android:textSize="15dp"
                    tools:ignore="MissingPrefix" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="@string/forced"
                app:layout_constraintTop_toTopOf="@+id/phone_text"
                app:layout_constraintBottom_toBottomOf="@+id/phone_text"
                app:layout_constraintEnd_toEndOf="@+id/phone_text"/>

