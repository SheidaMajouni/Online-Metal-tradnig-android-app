<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.UploadVoiceActivity">

    <ImageView
        android:id="@+id/green"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/voice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        />

    <ImageView
        android:id="@+id/voice_pic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/voice_pic"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/green"/>

    <ProgressBar
        android:id="@+id/store_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/voice_pic"
        app:layout_constraintBottom_toTopOf="@+id/send_voice"/>

    <Button
        android:id="@+id/send_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/action_bar"/>

</android.support.constraint.ConstraintLayout>