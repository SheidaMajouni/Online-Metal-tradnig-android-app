<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/infinite_bg"
    tools:context=".activities.UserInfoActivity">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/login_back"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/img_login_one"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/login_img" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/login_two"
                app:layout_constraintBottom_toBottomOf="@+id/logo_text"
                app:layout_constraintEnd_toEndOf="@id/img_login_one"
                app:layout_constraintTop_toTopOf="@id/img_login_one" />


            <TextView
                android:id="@+id/logo_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="15dp"
                android:text="@string/complete_registering"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="32dp"
                app:layout_constraintTop_toBottomOf="@id/img_login_one" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:text="@string/fill_the_balnks_to_reg"
                android:textAlignment="textStart"
                android:textColor="@color/textColor"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/logo_text" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="45dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logo_text">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="#757474"
                    android:hint="@string/name"
                    android:textAlignment="viewStart"
                    android:textSize="15dp"
                    tools:ignore="MissingPrefix" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forced"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/name"
                app:layout_constraintEnd_toEndOf="@+id/name"
                app:layout_constraintTop_toTopOf="@+id/name" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/text_family"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="#757474"
                    android:hint="@string/family_name"
                    android:textAlignment="viewStart"
                    android:textSize="15dp"
                    tools:ignore="MissingPrefix" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/forced"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/family"
                app:layout_constraintEnd_toEndOf="@+id/family"
                app:layout_constraintTop_toTopOf="@+id/family" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/family">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/email_complete_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/national_id"
                    android:drawableTint="#757474"
                    android:textAlignment="viewStart"
                    android:textSize="15dp"
                    tools:ignore="MissingPrefix" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/forced"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/email_complete"
                app:layout_constraintEnd_toEndOf="@+id/email_complete"
                app:layout_constraintTop_toTopOf="@+id/email_complete" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/address_comp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_complete">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/address_comp_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/address"
                    android:drawableTint="#757474"
                    android:textAlignment="viewStart"
                    android:textSize="15dp"
                    tools:ignore="MissingPrefix" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/forced"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/address_comp"
                app:layout_constraintEnd_toEndOf="@+id/address_comp"
                app:layout_constraintTop_toTopOf="@+id/address_comp" />

            <Button
                android:id="@+id/button_send_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/sign_up"
                android:text="@string/send"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/address_comp" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>