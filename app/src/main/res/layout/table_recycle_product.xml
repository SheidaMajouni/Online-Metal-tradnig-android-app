<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_product"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/galleryicon"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@mipmap/ic_orange_cart"
        android:drawableTint="@color/light_orange"
        app:layout_constraintLeft_toRightOf="@id/button_order_product"
        app:layout_constraintTop_toTopOf="@id/button_order_product"
        app:layout_constraintBottom_toBottomOf="@id/button_order_product"/>

    <TextView
        android:id="@+id/button_order_product"
        android:layout_width="71dp"
        android:layout_height="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/order"
        android:elevation="0dp"
        android:textStyle="normal"
        android:background="@color/white"
        android:textAlignment="center"
        android:textColor="@color/icon"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="@+id/table_product_price"/>

    <TextView
        android:id="@+id/table_product_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:text="1234567"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/image_product"
        app:layout_constraintTop_toTopOf="@+id/image_product"/>

    <TextView
        android:id="@+id/table_delivery_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="1234567"
        android:textAlignment="center"
        android:textColor="@color/icon"
        android:textStyle="italic"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/table_product_size"
        app:layout_constraintRight_toRightOf="@+id/table_product_size"/>

    <TextView
        android:id="@+id/table_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="1234567"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/table_delivery_product"
        app:layout_constraintRight_toRightOf="@+id/table_delivery_product"/>

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/half_black"
        app:layout_constraintTop_toBottomOf="@+id/image_product"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

</android.support.constraint.ConstraintLayout>