<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShoppingCartActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/custom_action_bar_basket"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/action_bar"
        app:layout_constraintBottom_toTopOf="@+id/basket_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="0.11">

        <TextView
            android:id="@+id/chair_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="@string/chair_ironwork"
            android:drawableStart="@mipmap/ic_logo_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/basket_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/custom_action_bar_basket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="0.89"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

